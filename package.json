{
  "name": "latebits-studio",
  "displayName": "latebits-studio",
  "description": "Official tools for the LateBits game engine",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.86.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onFileSystem:latebits",
    "onLanguage:latebits"
  ],
  "main": "./out/src/index.js",
  "contributes": {
    "commands": [
      {
        "command": "latebits-studio.sprite",
        "title": "Show sprite preview",
        "category": "LateBits"
      }
    ],
    "languages": [ {
        "id": "latebits",
        "aliases": [ "LateBits", "latebits" ],
        "extensions": [ ".latebits" ]
      } ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.86.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.9"
  }
}
